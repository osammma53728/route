<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#3b5998">

    <!-- Facebook Logo -->
    <TextView
        android:id="@+id/facebook_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="facebook"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif" />

    <!-- Email or Phone Input -->
    <EditText
        android:id="@+id/email_phone_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_below="@id/facebook_logo"
        android:background="@android:color/white"
        android:hint="Email or phone number"
        android:padding="12dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- Password Input -->
    <EditText
        android:id="@+id/password_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_below="@id/email_phone_input"
        android:background="@android:color/white"
        android:hint="Password"
        android:padding="12dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:inputType="textPassword" />

    <!-- Log In Button -->
    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_below="@id/password_input"
        android:backgroundTint="#4c66a4"
        android:text="Log In"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Sign Up and Help Center Links -->
    <TextView
        android:id="@+id/sign_up_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@id/login_button"
        android:layout_centerHorizontal="true"
        android:text="Sign Up for Facebook"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/help_center_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/sign_up_link"
        android:layout_centerHorizontal="true"
        android:text="Help Center"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</RelativeLayout>
